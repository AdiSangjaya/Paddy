<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UploadActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/padi"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_bg"
                    android:layout_gravity="left"
                    android:id="@+id/back"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:background="@drawable/ic_btn"
                android:orientation="horizontal"
                android:paddingBottom="30dp">

                <TextView
                    android:layout_width="329dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="20dp"
                    android:text="Selamat Datang \nSilakan Upload \natau Foto Hamanya "
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_paddy"

                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgUpload"
                android:src="@drawable/scan"
                android:layout_gravity="center_horizontal"
                android:layout_width="230dp"
                android:layout_height="277dp"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/btnPickUpload"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/ic__0_file"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/takePict"
                    android:layout_width="140dp"
                    android:layout_height="133dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic__8_camera_1"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </LinearLayout>
            <Button
                android:id="@+id/btnUpload"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:text="Scan Hama"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/ic_btn"
                android:textAllCaps="false"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>